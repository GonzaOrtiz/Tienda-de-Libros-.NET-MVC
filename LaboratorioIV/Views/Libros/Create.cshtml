@model LaboratorioIV.Models.Libro

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Libro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resumen" class="control-label"></label>
                <input asp-for="Resumen" class="form-control" />
                <span asp-validation-for="Resumen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaDePublicacion" class="control-label"></label>
                <input asp-for="FechaDePublicacion" class="form-control" />
                <span asp-validation-for="FechaDePublicacion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GeneroId" class="control-label"></label>
                <select asp-for="GeneroId" class="form-control" asp-items="ViewBag.GeneroId"></select>
            </div>
            <div class="form-group">
                <label asp-for="AutorId" class="control-label"></label>
                <select asp-for="AutorId" class="form-control" asp-items="ViewBag.AutorId"></select>
            </div>

            <div class="form-group">
                <img src="" id="imagen" class="img-thumbnail"
                     style="max-height: 75px;max-width: 75px;"
                     asp-append-version="true" />
                <label class="control-label">Seleccione fotografia</label>
                <input asp-for="ImagenTapa" type="file" accept="image/jpeg" id="seleccionImg" />
            </div>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
